/* miniprogram/pages/group/group.wxss */
page {
    background-color: #f2f2f2;
}
/* 顶部 */
.container {
    background-color: #fff;
    margin: 40rpx;
    border-radius: 20rpx;
}
.myGroup {
    width: 100%;
    height: 111rpx;
    display: flex;
    align-items: center;
    border-bottom: 1px solid #f0efef;
}
.myGroup image {
    width: 40rpx;
    height: 40rpx;
    margin: 0 20rpx;
}
.myGroup .title {
    font-weight: 700;
}
/* 群组 */
.group {
    display: flex;
    justify-content: space-between;
    width: 100%;
    height: 80rpx;
    align-items: center;
    border-bottom: 1px solid #f0efef;
}
.group:last-child {
    border: none;
}
.group .groupName {
    margin-left: 20rpx;
}
.groupRigth {
    display: flex;
    margin-right: 30rpx;
}
.group .groupImage {
    width: 45rpx;
    height: 45rpx;
    border-radius: 23rpx;
    overflow: hidden;
}
.group .groupImage image {
    width: 100%;
    height: 100%;
    
}
