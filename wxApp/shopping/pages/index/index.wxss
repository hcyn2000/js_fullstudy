/* pages/index/index.wxss */
swiper {
    height: 421rpx;
}
.slide-image {
    width: 100%;
    height: 100%;
}
.select-title,
.newest-title {
    text-align: center;
    margin: 30rpx 0;
    font-size: 35rpx;
    color: #ab956d;
}
.select-top,
.select-botton {
    width: 100%;
    height: 375rpx;
}
.select-top__small {
    width: 375rpx;
    height: 100%;
    float: left;
}
.select-top__small navigator,
.select-top__small image,
.select-botton navigator,
.select-botton image {
    display: block;
    width: 100%;
    height: 100%;
}

/* 最新新品 */
.newest-box {
    padding: 0 40rpx;
}
.newest-list {
    display: inline-block;
    width: 325rpx;
    height: 325rpx;
    margin: 0 20rpx 20rpx 0;
    border-radius: 10px;
    background-color: #f5f6f5;
    text-align: center;
}
.newest-list:nth-child(2n) {
    margin-right: 0;
}
.newest-list image {
    width: 175rpx;
    height: 175rpx;
    margin: 20rpx 0 10rpx;
}