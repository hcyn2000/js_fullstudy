/* pages/category/category.wxss */
.scroll {
    width: 20%;
    height: 1110rpx;
    background-color: skyblue;
    text-align: center;
    border-right: 1px solid #000;
}
.scroll .scroll-title {
    height: 100rpx;
    line-height: 100rpx;
   
    /* background: #fafafa; */
}
.text {
    color: #ad8c60;
     border-left: 3px solid #ad8c60;
}
.content {
    width: 80%;
  height: 1110rpx;
  position: absolute;
  right: 0px;
  top: 0px;
}
.content .box {
    height: 100vh;
}
.content-img {
    width: 260px;
    height: 100px;
    margin: 20px auto;
}
.content-img image {
    width: 100%;
    height: 100%;
}
.content-title {
    text-align: center;
    color: #ad8c60;
    /* margin-bottom: 25px; */
}
.varieties {
    padding: 0 38px;
}
.type {
    float: left;
    margin-right: 48px;
}
.type:nth-child(3n){
    margin-right: 0;
}
.type-img {
    margin: 20px auto;
    width: 40px;
    height: 40px;
}
.type-img image {
    width: 100%;
    height: 100%;
}
.type-text {
    font-size: 30rpx;
    text-align: center;
}