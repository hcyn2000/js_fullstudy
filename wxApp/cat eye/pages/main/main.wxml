<!--pages/main/main.wxml-->
<view class="container">
    <scroll-view scroll-y style="height: 100%;">
        <!-- 头部 -->
        <view class="header">
            <view class="header_hd">
                <text>南昌</text>
                <view class="downtips"></view>
            </view>
            <view class="header_bd">
                <view class="header_bd-hot header_bd-btn" style="color:{{isLeft?'#ef4238':'#666666'}}"
                    bindtap="tabChangeHot">正在上映</view>
                <view class="header_bd-waiting header_bd-btn" style="color: {{isLeft?'#666':'#ef4238'}}"
                    bindtap="tabChangeWaiting">即将上映</view>
                <view class="bottomLine" style="left:{{isLeft?'73px':'140px'}}"></view>
            </view>
            <view class="header_ft">
                <image src="../../images/ss.png" alt=""></image>
            </view>
        </view>

        <!-- 轮播图 -->
        <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}"
            duration="{{duration}}" indicator-color="#fff" indicator-active-color="blue">
            <swiper-item wx:for="{{imgUrls}}" wx:key="index">
                <image class="slide-image" width="355" height="150" src="{{item}}"></image>
            </swiper-item>
        </swiper>


        <view wx:for="{{movieList}}" wx:key="{{index}}">
            <view class="flex item">
                <view class="item_left">
                    <image src="{{item.imgUrl}}" />
                </view>

                <view class="item_middle">
                    123213
                </view>

                <viem class="item_right">
                    按钮
                </viem>
            </view>
        </view>

    </scroll-view>
</view>